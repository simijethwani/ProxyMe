{
  "manifest_version": 3,
  "name": "ProxyMe Meeting Assistant",
  "version": "1.0",
  "description": "Toggle between ProxyMe and RealMe during meetings. Capture transcripts, summarize, and interact intelligently.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*", "https://teams.microsoft.com/*"],
      "js": ["content.js"]
    }
  ]
}
